Vagrant.configure("2") do |config|

  config.vm.provider "{{ cookiecutter.vm_provider }}" do |v|
      v.memory = {{ cookiecutter.vm_ram }}
      v.cpus = {{ cookiecutter.vm_cpu }}
  end
  
  config.vm.define "ansible", autostart: "True" do |ansible|
      ansible.vm.box = "{{ cookiecutter.vagrant_box }}"
      ansible.vm.hostname = "{{ cookiecutter.vm_hostname }}"

      ansible.vm.provision "shell", inline: "sudo yum -y install epel-release && sudo yum -y install git vim python-pip"
      ansible.vm.provision "shell", inline: "sudo pip install ansible"
      ansible.vm.provision "file", source: ".", destination: "{{ cookiecutter.ansible_path }}"
      ansible.vm.provision "shell", inline: "(cd {{ cookiecutter.ansible_path }} && [ -f roles/requirements.yml ] && ansible-galaxy install -r roles/requirements.yml) || echo 'No requirements file found, skipping Galaxy installs...'"
      ansible.vm.provision "shell", inline: "(cd {{ cookiecutter.ansible_path }} && [ -f playbook.yml ] && ansible-playbook -v playbook.yml) || echo 'No playbook found, continuing without running Ansible...'"

  end
end
